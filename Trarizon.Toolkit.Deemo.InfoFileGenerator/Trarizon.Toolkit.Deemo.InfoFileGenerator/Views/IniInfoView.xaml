<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Trarizon.Toolkit.Deemo.InfoFileGenerator.Views.IniInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="using:Trarizon.Toolkit.Deemo.InfoFileGenerator.Controls"
             mc:Ignorable="d">

	<StackPanel Orientation="Vertical">
		<c:PropertyTextBox PropertyName="Music"
						   PropertyValue="{x:Bind ViewModel.MusicName,Mode=TwoWay}" />
		<c:PropertyTextBox PropertyName="Composer"
						   PropertyValue="{x:Bind ViewModel.Composer,Mode=TwoWay}" />
		<c:PropertyTextBox PropertyName="Charter"
						   PropertyValue="{x:Bind ViewModel.Charter,Mode=TwoWay}" />
		<c:PropertyTextBox PropertyName="Easy"
						   PropertyValue="{x:Bind ViewModel.EasyLevel,Mode=TwoWay}" />
		<c:PropertyTextBox PropertyName="Normal"
						   PropertyValue="{x:Bind ViewModel.NormalLevel,Mode=TwoWay}" />
		<c:PropertyTextBox PropertyName="Hard"
						   PropertyValue="{x:Bind ViewModel.HardLevel,Mode=TwoWay}" />
		<c:PropertyTextBox PropertyName="Extra"
						   PropertyValue="{x:Bind ViewModel.ExtraLevel,Mode=TwoWay}" />
	</StackPanel>
</UserControl>
